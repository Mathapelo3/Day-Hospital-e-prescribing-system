@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="text-center ">
@*                <img src="~/Images/zoomedLogo (2).png" width="200" />
*@            </div>
            <br />
            <h4 class="display-6 text-warning text-center text-bold">SURGEON DASHBOARD</h4>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images//planner.png" width="100" />
                    <div>
                        <br />
                    </div>
                    <h5 class="text-bold">VIEW PATIENTS</h5>
                    <p class="card-text text-secondary">View patients details.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Index","YearPlan")'" class="btn btn-outline-warning">PATIENTS</button>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/timetable.jpg" width="100" />
                    <div>
                        <br />
                    </div>
                    <h5 class="text-bold">BOOK NEW SURGERY</h5>
                    <p class="card-text text-secondary">Book a new surgery for a patient.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Index","SubHeadTimetable")'" class="btn btn-outline-warning">SURGERY</button>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/teach.png" width="100" />
                    <div>
                        <br />
                    </div>
                    <h5 class="text-bold">VIEW ADMISSION RECORDS</h5>
                    <p class="card-text text-secondary">View admission records.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Create","EducatorAssignReport")'" class="btn btn-outline-warning">RECORDS</button>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/study.png" width="100" />
                    <div>
                        <br />
                    </div>
                    <h5 class="text-bold">PRESCRIPTION</h5>
                    <p class="card-text text-secondary">New prescription for a patient.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Index","StudyMaterial")'" class="btn btn-outline-warning">PRESCRIPTION</button>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/tutor.png" width="100" />
                    <div>
                        <br />
                    </div>
                    <h5 class="text-bold">DISCHARGE PATIENT</h5>
                    <p class="card-text text-secondary">Provide details to discharge a patient.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Index","TutorAssign")'" class="btn btn-outline-warning">DISCHARGE</button>
                </div>
            </div>
        </div>
    </div>

</section>