@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
@* <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
 *@
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <br />
            <h4 class="display-6 text-warning text-center text-bold">SURGEON DASHBOARD</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/Surgeon/patients.png" width="60" />
                    <h5 class="text-bold">VIEW PATIENTS</h5>
                    <p class="card-text text-secondary">View patients details.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Patients","Surgeon")'" class="btn btn-outline-warning">VIEW</button>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/Surgeon/surgery.png" width="60" />
                    <h5 class="text-bold">SURGERIES</h5>
                    <p class="card-text text-secondary">View surgery details.</p>
                    <button type="button" onclick="location.href = '@Url.Action("Surgeries","Surgeon")'" class="btn btn-outline-warning">VIEW</button>
                </div>
            </div>
        </div>
        @* <div class="col-sm-4">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/Surgeon/admissions.png" width="60" />
                    <h5 class="text-bold">VIEW MEDICAL RECORDS</h5>
                    <p class="card-text text-secondary">View admission records.</p>
                    <button type="button" onclick="location.href = '@Url.Action("PatientRecord","Surgeon")'" class="btn btn-outline-warning">VIEW</button>
                </div>
            </div>
        </div> *@
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/Surgeon/prescription.png" width="60" />
                    <h5 class="text-bold">PRESCRIPTION</h5>
                    <p class="card-text text-secondary">Submit prescription for patient.</p>
                    <button type="button" onclick="location.href = '@Url.Action("NewPrescription","Surgeon")'" class="btn btn-outline-warning">VIEW</button>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card text-center" style="height:200px">
                <div class="card-body text-warning">
                    <img src="~/Images/Surgeon/dischargeform.png" width="80" />
                    <h5 class="text-bold">DISCHARGE PATIENT</h5>
                    <p class="card-text text-secondary">Indicate which patient to discharge.</p>
                    <button type="button" onclick="location.href = '@Url.Action("DischargePatient","Surgeon")'" class="btn btn-outline-warning">VIEW</button>
                </div>
            </div>
        </div>
    </div>

</section>