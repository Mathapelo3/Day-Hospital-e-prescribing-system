@model Day_Hospital_e_prescribing_system.ViewModel.PatientRecordViewModel

@{
    ViewData["Title"] = "AdmissionRecord";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<section class="content">
    <div class="card">
        <div class="card-header">
            <br />
            <h4 class="display-6 text-warning text-center text-bold">PATIENT MEDICAL HISTORY</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4 class="card-title text-bold"> Patient: @(Model.Patient?.Name ?? "N/A") @(Model.Patient?.Surname ?? "N/A")</h4>
        </div>
        @* <div class="col-md-1 text-right">
            <a href="@Url.Action("Prescriptions", "Surgeon", new { id = Model.Patient?.PatientID })" class="btn btn-warning text-bold">Prescriptions</a>
        </div>
        <div class="col-md-3 text-right">
            <a href="@Url.Action("NewSurgery", "Surgeon")" class="btn btn-warning text-bold">Book Surgery</a>
        </div> *@
    </div>
    <div class="container p-3 text-md-center">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Contact No.</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@(Model.Patient?.DateOfBirth ?? "N/A")</td>
                    <td>@(Model.Patient?.Gender ?? "N/A")</td>
                    <td>@(Model.Patient?.ContactNo ?? "N/A")</td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-14">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title text-bold">Patient Allergies</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Allergies -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="allergiesTable" class="table table-bordered table-striped">
                                            <thead>
                                                <th>Allergy</th>
                                                <th>Description</th>
                                            </thead>
                                            <tbody>
                                                @if (Model.Allergies.Any())
                                                {
                                                    foreach (var allergy in Model.Allergies)
                                                    {
                                                        <tr>
                                                            <td>@allergy.Name</td>
                                                            <td>@allergy.Description</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <p>No allergies found.</p>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-14">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title text-bold">Patient Vitals</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Vitals -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="vitalsTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Vital</th>
                                                    <th>Min</th>
                                                    <th>Max</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Vitals != null && Model.Vitals.Any())
                                                {
                                                    @foreach (var vital in Model.Vitals)
                                                    {
                                                        <tr>
                                                            <td>@(vital?.Vital ?? "N/A")</td>
                                                            <td>@(vital?.Min?.ToString() ?? "N/A")</td>
                                                            <td>@(vital?.Max?.ToString() ?? "N/A")</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr><td colspan="3">No vitals recorded</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Patients", "Surgeon")'">Back</button>
        </div>
    </div>
</section>