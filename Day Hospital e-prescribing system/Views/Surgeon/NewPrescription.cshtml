@{
    ViewData["Title"] = "NewPrescription";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="card">
    <div class="card-header">
        <div class="text-center ">
            @*                <img src="~/Images/zoomedLogo (2).png" width="200" />
            *@
        </div>
        <br />
        <h4 class="display-6 text-warning text-center text-bold">PRESCRIPTION FORM </h4>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form id="orderForm">
                            <div class="form-group">
                                <label for="surgeon">Patient:</label>
                                <select class="form-control" id="patient" name="surgeon">
                                    <option value="patient">---</option>
                                    <option value="patient">John Doe</option>
                                    <option value="patient">Jane Smith</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="date">Date:</label>
                                <input type="date" class="form-control" id="date" name="date">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="medication">Medication:</label>
                                    <select class="form-control" id="medication">
                                        <option value="sedatives"> Anxiolytics 20mg</option>
                                        <option value="pain_reliever"></option>
                                        <!-- Add more medication options here -->
                                    </select>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="medication">Instruction:</label>
                                    <input type="text" class="form-control" id="instruction" name="instruction">
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="quantity">Quantity:</label>
                                    <select class="form-control" id="quantity">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <!-- Add more quantity options here -->
                                    </select>
                                </div>

                                <div class="form-group col-md-1">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary form-control" id="addMedication">
                                        <i class="fas fa-plus"></i> <!-- Font Awesome plus icon -->
                                    </button>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="medicationList">Medication List:</label>
                                    <select multiple class="form-control" id="medicationList">
                                        <!-- Medication will be populated here -->
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="urgency">Urgency:</label>
                                <input type="checkbox">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning text-bold">SUBMIT</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>