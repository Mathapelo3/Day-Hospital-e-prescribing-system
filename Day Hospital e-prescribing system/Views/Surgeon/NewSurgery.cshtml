@{
    ViewData["Title"] = "NewSurgery";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h3 class="card-title text-warning text-bold">SURGERY FORM</h3>
                    </div>
                    <div class="card-body">
                        <form id="orderForm">
                            <div class="form-group">
                                <label for="date">Date:</label>
                                <input type="date" class="form-control" id="date" name="date">
                            </div>
                            <div class="form-group">
                                <label for="surgeon">Patient:</label>
                                <select class="form-control" id="patient" name="surgeon">
                                    <option value="patient">---</option>
                                    <option value="patient">John Doe</option>
                                    <option value="patient">Jane Smith</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="anaesthesiologist">Anaesthesiologist:</label>
                                <select class="form-control" id="surgeon" name="surgeon">
                                    <option value="anaesthesiologist">Dr Lee Jones</option>
                                    <option value="anaesthesiologist">Dr Anne Wood</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="surgeon">Procedure:</label>
                                <select class="form-control" id="surgeon" name="surgeon">
                                    <option value="surgery">Appendectomy</option>
                                    <option value="surgery">Hysterectomy</option>
                                    <option value="surgery">Gallbladder removal</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="surgeon">Treatment Code:</label>
                                <select class="form-control" id="surgeon" name="surgeon">
                                    <option value="surgery">Appendectomy</option>
                                    <option value="surgery">Hysterectomy</option>
                                    <option value="surgery">Gallbladder removal</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning text-bold">Submit</button>
                            </div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>