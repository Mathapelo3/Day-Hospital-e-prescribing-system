@using Day_Hospital_e_prescribing_system.ViewModel
@model SurgeryViewModel
@{
    ViewData["Title"] = "NewSurgery";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="card">
    <div class="card-header">
        <br />
        <h4 class="display-6 text-warning text-center text-bold">BOOK NEW SURGERY</h4>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="NewSurgery" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="date">Date:</label>
                                <input type="date" class="form-control" id="date" name="date">
                            </div>
                            <div class="form-group">
                                <label for="time">Time Slot:</label>
                                <select asp-for="Time" class="form-control">
                                    <option value="">---Select---</option>
                                    <option value="AM">AM</option>
                                    <option value="PM">PM</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="patient">Patient:</label>
                                <select asp-for="PatientID" class="form-control" id="patientID" name="PatientID">
                                    <option value="">---Select---</option>
                                    @foreach (var item in Model.PatientList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="anaesthesiologist">Anaesthesiologist:</label>
                                <select asp-for="AnaesthesiologistID" class="form-control" id="anaesthesiologistID" name="AnaesthesiologistID">
                                    <option value="">---Select---</option>
                                    @foreach (var item in Model.AnaesthesiologistList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="nurse">Theatre:</label>
                                <select asp-for="TheatreID" class="form-control" id="theatreID" name="TheatreID">
                                    <option value="">---Select---</option>
                                    @foreach (var item in Model.TheatreList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                            </div>
                            <div class="form-row">
                                <!-- Modify the treatment selection area -->
                                <div class="form-group col-md-11">
                                    <label for="treatment">Treatment Codes:</label>
                                    <select multiple class="form-control" id="treatmentCodeSelect">
                                        @foreach (var item in Model.TreatmentCodeList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-1">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary form-control" id="addTreatment">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="treatmentList">Treatment Code List:</label>
                                    <select multiple class="form-control" id="treatmentList">
                                        <!-- TreatmentCodes will be populated here -->
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning text-bold">SUBMIT</button>
                                <button type="button" class="btn btn-warning text-bold" onclick="location.href='@Url.Action("AddPatients", "Surgeon")'">
                                    Add Patient
                                </button>
                                <button type="button" class="btn btn-danger text-bold" onclick="location.href='@Url.Action("Surgeries", "Surgeon")'">
                                    Back
                                </button>
                            </div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#addTreatment').click(function () {
            var selectedTreatmentCodes = $('#treatmentCodeSelect option:selected');
            if (selectedTreatmentCodes.length > 0) {
                selectedTreatmentCodes.each(function () {
                    // Add each selected treatment code to the SelectedTreatmentCodes list
                    $('<input>').attr({
                        type: 'hidden',
                        name: 'SelectedTreatmentCodes[]', // Note the square brackets for multiple values
                        value: $(this).val()
                    }).appendTo('form');

                    // Clone the selected option and append it to the treatmentList
                    $(this).clone().appendTo('#treatmentList');
                });
                // Clear the selection after adding
                selectedTreatmentCodes.remove();
            }
        });
    });
</script>
