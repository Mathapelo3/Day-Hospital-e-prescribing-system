@using Day_Hospital_e_prescribing_system.ViewModel
@model SurgeryViewModel
@{
    ViewData["Title"] = "NewSurgery";
    Layout = "~/Views/Shared/SurgeonLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="card">
    <div class="card-header">
        <br />
        <h4 class="display-6 text-warning text-center text-bold">BOOK NEW SURGERY</h4>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="NewSurgery" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="date">Date:</label>
                                <input type="date" class="form-control" id="date" name="date">
                            </div>
                            <div class="form-group">
                                <label for="time">Time Slot:</label>
                                <select asp-for="Time" class="form-control">
                                    <option value="">---Select---</option>
                                    <option value="AM">AM</option>
                                    <option value="PM">PM</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label asp-for="Patient" class="control-label">Patient Name:</label>
                                <input asp-for="Patient" class="form-control" />
                                <span asp-validation-for="Patient" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="anaesthesiologist">Anaesthesiologist:</label>
                                <select asp-for="AnaesthesiologistID" class="form-control" id="anaesthesiologistID" name="AnaesthesiologistID">
                                    <option value="">---Select---</option>
                                    @foreach (var item in Model.AnaesthesiologistList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="nurse">Theatre:</label>
                                <select asp-for="TheatreID" class="form-control" id="theatreID" name="TheatreID">
                                    <option value="">---Select---</option>
                                    @foreach (var item in Model.TheatreList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-11">
                                    <label for="treatment">Treatment Code:</label>
                                    <select class="form-control" id="treatmentCodeSelect">
                                        <option value="">---Select---</option>
                                        @foreach (var item in Model.TreatmentCodeList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-1">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary form-control" id="addTreatment">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="treatmentList">Treatment Code List:</label>
                                    <select multiple class="form-control" id="treatmentList">
                                        <!-- TreatmentCodes will be populated here -->
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning text-bold">SUBMIT</button>
                                <button type="button" class="btn btn-danger text-bold" onclick="location.href='@Url.Action("Surgeries", "Surgeon")'">
                                    Back
                                </button>
                            </div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#addTreatment').click(function () {
            var selectedTreatmentCode = $('#treatmentCodeSelect option:selected');
            if (selectedTreatmentCode.val() !== '') {
                // Clone the selected option and append it to the treatmentList
                selectedTreatmentCode.clone().appendTo('#treatmentList');
                // Append a hidden input field for the selected value
                $('<input>').attr({
                    type: 'hidden',
                    name: 'SelectedTreatmentCodes', // Match the name expected by your model
                    value: selectedTreatmentCode.val()
                }).appendTo('form');
                // Optionally, remove the added option from the original select to prevent duplicates
                selectedTreatmentCode.remove();
            }
        });
    });

</script>
