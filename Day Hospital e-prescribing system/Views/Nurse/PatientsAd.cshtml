@model IEnumerable<Day_Hospital_e_prescribing_system.ViewModel.AdmissionVM>
@{
    ViewData["Title"] = "PatientsAd";
    Layout = "~/Views/Shared/NurseLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="text-center ">
            <h3 class="display-6 text-primary text-center text-bold">ADMITTED PATIENTS</h3>
        </div>
    </div>
    </div>
    <br />
    <form asp-action="PatientsAd" method="get">
        @* <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
        <i class="fas fa-search"></i>
        </span>
        </div>*@
        <br />
        <div class="card">
            <div class="body">
                <div class="card-header text-bold">
                    View all admitted patients
                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        <div class="row">
                            <table class="table table-striped table-bordered" id="myTable">
                                <thead>
                                   @* @if (Model.Any())
                                    {*@
                                        <table id="patientsTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Patient Name</th>
                                                    <th>Date</th>
                                                    <th>Time</th>
                                                    <th>Ward</th>
                                                    <th>Bed</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Name @item.Surname</td>
                                                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                                        <td>@item.Time</td>
                                                        <td>@item.WardName</td>
                                                        <td>@item.BedName</td>
                                                    <td>
                                                    <a asp-action="EditPatientProfiles" asp-route-id="@item.PatientID" class="btn btn-primary">
                                                        UPDATE PROFILE
                                                    </a>
                                                </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                   
                                   @* else
                                    {
                                        <p>No admitted patients</p>
                                    }*@
                            </table>

                        </div>
                    </div>

    </form>

