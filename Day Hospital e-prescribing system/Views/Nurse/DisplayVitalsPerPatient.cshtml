            <div class="card">
                <div class="body">
                    <div class="card-header text-bold">
                    @(Model.Patient?.Name ?? "N/A") @(Model.Patient?.Surname ?? "N/A")
                    </div>
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
