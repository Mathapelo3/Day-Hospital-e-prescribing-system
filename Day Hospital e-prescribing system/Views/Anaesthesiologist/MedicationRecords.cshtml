@{
    ViewData["Title"] = "Medication Records";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}
<style>
    .card-title {
        font-weight: bold;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Medication Records</h3>
                    </div>
                    <div class="card-body">
                        <!-- Display orders with checkboxes -->
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Surgeon</th>
                                        <th style="width: 120px;">Date</th>
                                        <th>Medication</th>
                                        <th>Strength</th>
                                        <th>Quantity</th>
                                        <th>Status</th>
                                        <th>Administered</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Sample row with multiple medications, replace with actual data -->
                                    <tr>
                                        <td>Jane Doe</td>
                                        <td>Jackson</td>
                                        <td rowspan="2">2024-05-10</td>
                                        <td>Anxiolytics,<br > Pain Reliever</td>
                                        <td>20mg, 50mg</td>
                                        <td>10,<br > 5</td>
                                        <td>Ordered,<br > Received</td>
                                        <td><input type="checkbox" ><br ><input type="checkbox"></td>
                                        <td rowspan="2"><textarea class="form-control" style="height: 100px;"></textarea></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td>Anesthetics</td>
                                        <td>30mg</td>
                                        <td>8</td>
                                        <td>Ordered</td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <!-- Add more rows dynamically based on data -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-success">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
