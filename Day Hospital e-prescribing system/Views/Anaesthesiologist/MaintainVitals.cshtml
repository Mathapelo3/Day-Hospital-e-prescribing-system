@model IEnumerable<Day_Hospital_e_prescribing_system.ViewModel.VitalsViewModel>

@{
    ViewData["Title"] = "Maintain Vitals";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml"; // Ensure this path is correct
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">



<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center ">
                <!-- Optional Logo -->
            </div>
            <br />
            <h4 class="display-6 text-purple text-center text-bold">MAINTAIN VITALS</h4>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card-body">
                  

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Vital</th>
                                    <th>Min</th>
                                    <th>Max</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Vital</td>
                                        <td>@item.Min</td>
                                        <td>@item.Max</td>
                                        <td>
                                            <a asp-action="EditVital" asp-route-id="@item.VitalsID" class="btn btn-primary">
                                                <i class="fas fa-edit"></i> 
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <br />
                <div class="text-center">
                    
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddVitals", "Anaesthesiologist")'">
                        <i class="fas fa-plus"></i> <!-- Font Awesome plus icon -->
                    </button>

                    
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
