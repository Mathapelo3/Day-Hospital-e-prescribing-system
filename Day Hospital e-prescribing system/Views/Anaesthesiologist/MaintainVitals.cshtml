    <script>
        // Dynamically populate dropdown options from 0 to 150
        for (let i = 0; i <= 150; i++) {
        $('#temperature_min, #temperature_max, #blood_pressure_min, #blood_pressure_max, #blood_oxygen_min, #blood_oxygen_max, #blood_glucose_min, #blood_glucose_max').append($('<option>', {
            value: i,
            text: i
        }));
    }
    // Dynamically populate pulse rate dropdown with specified ranges
    $('#pulse_rate_min, #pulse_rate_max').append($('<option>', {
        value: '0-59',
        text: '0-59 bpm'
    }));
    $('#pulse_rate_min, #pulse_rate_max').append($('<option>', {
        value: '60-100',
        text: '60-100 bpm'
    }));
    $('#pulse_rate_min, #pulse_rate_max').append($('<option>', {
        value: '101-150',
        text: '101-150 bpm'
    }));
    $('#pulse_rate_min, #pulse_rate_max').append($('<option>', {
        value: '151-200',
        text: '151-200 bpm'
    }));
    $('#respiratory_rate_min, #respiratory_rate_max').append($('<option>', {
        value: '0-6',
        text: '0-6bpm'
    }));
    $('#respiratory_rate_min, #respiratory_rate_max').append($('<option>', {
        value: '6-10',
