    <script>

    // Function to add a new vital category row
    function addVital() {
        $('#vitalRows').append(`
            <tr>
                <td><input type="text" class="form-control" placeholder="Enter Vital"></td>
                <td><input type="number" class="form-control" placeholder="Min"></td>
                <td><input type="number" class="form-control" placeholder="Max"></td>
            </tr>
        `);
    }

    // Function to delete the last vital category row
    function deleteVital() {
        $('#vitalRows tr:last').remove();
    }

    // Function to save changes
    function saveChanges() {
        var vitals = [];
        $('#vitalRows tr').each(function () {
            var vital = {
                name: $(this).find('input:eq(0)').val(),
                min: $(this).find('input:eq(1)').val(),
                max: $(this).find('input:eq(2)').val()
            };
            vitals.push(vital);
        });
        console.log(vitals); // Here you can send the data to the server for saving
    }

     
    

