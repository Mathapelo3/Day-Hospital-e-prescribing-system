<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<section class="content">
    <!-- Display patients -->
    <div class="row">
        <div class="col-md-14">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">ADMITTED PATIENTS</h3>
                </div>
                <div class="card-body">
                    <!-- Search bar and filters -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <!-- Search bar -->
                            <div class="input-group">
                                <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="searchButton">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                       @* <div class="col-md-4">
                            <!-- Gender filter -->
                            <select class="form-control" id="genderFilter">
                                <option value="">All Genders</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>*@
                        <div class="col-md-4">
                            <!-- Admission date filter -->
                            <div class="input-group">
                                <input type="date" id="admissionDateFilter" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="patientsTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    
                                    <th>Surname</th>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Contact Number</th>
                                    <th>Email</th>
                                    <th>Admission</th>
                                    <th>Ward</th>
                                    <th>Bed</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Patient data will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        // Dummy data (replace with actual data retrieval logic)
        var patientsData = [
