@model IEnumerable<Day_Hospital_e_prescribing_system.ViewModel.OrderViewModel>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .card-title {
        font-weight: bold;
    }

    .btn-view {
        background-color: purple;
        color: white;
    }

    .btn-purple {
        background-color: purple;
        color: white;
        font-weight: bold;
    }
</style>
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                @* <img src="~/Images/zoomedLogo (2).png" width="200" /> *@
            </div>
            <br />
            <h4 class="display-6 text-purple text-center text-bold"> ORDERS </h4>
        </div>
    </div>
    <div><br></div>

    <!-- Search bar -->
    
        <div class="mb-3"></div>
        <!-- Display patients -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            
            <th>Medication</th>
            <th>Quantity</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.Patient</td>
                
                <td>@order.Medication</td>
                <td>@order.Quantity</td>
                <td>@order.Status</td>
                <td>
                    @if (order.Status == "ordered")
                    {
                        <a asp-action="EditOrders" asp-route-id="@order.OrderID" class="btn btn-primary">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
            </div>
        </div>
    </div>
</section>