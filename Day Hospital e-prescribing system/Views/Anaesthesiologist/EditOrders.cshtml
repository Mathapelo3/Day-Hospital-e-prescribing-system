@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .card-title {
        font-weight: bold;
    }
</style>
<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center ">
                @*                <img src="~/Images/zoomedLogo (2).png" width="200" />
                *@
            </div>
            <br />
            <h4 class="display-6 text-purple text-center text-bold">ORDER LIST</h4>
        </div>
    </div>
    <div><br></div>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-10">
                            <h3 class="card-title"> </h3>
                        </div>
                        <div class="col-md-2 text-right">
                            <button type="submit" class="btn btn-primary">Order Form</button>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Date</th>
                                    <th>Medication</th>
                                <th>Quantity</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample row, replace with actual data -->
                                <tr>
                                    <td>Joe Doe</td>
                                    <td>2024-05-10</td>
                                    <td>Anxiolytics 20mg</td>
                                    <td>10</td>
                                    <td>Ordered</td>
                                    <td width="10%">
                                        <div class="text-center">
                                            <div class="text-center">
                                                <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                    <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                                </button>
                                        </div>

                                    </td>
                                </tr>
                                <tr>
                                    <td>Alice Lee</td>
                                    <td>2024-05-15</td>
                                    <td>Anxiolytics 20mg</td>
                                    <td>20</td>
                                    <td>Dispensed</td>
                                    <td width="10%">
                                       @* <div <button type="button" class="btn btn-primary" onclick="editVital()"></></button>

                                            </div>*@
                                    </td>
                                </tr>
                                <!-- Add more rows dynamically based on data -->
                            </tbody>
                        </table>
                    </div>
                   
                    <div>
                        <button type="button" class="btn btn-primary" onclick="editVital()">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
