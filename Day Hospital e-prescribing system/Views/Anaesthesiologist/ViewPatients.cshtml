@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .card-title {
        font-weight: bold;
    }
</style>
<section class="content">
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="text-center ">
                    @*                <img src="~/Images/zoomedLogo (2).png" width="200" />
                    *@
                </div>
                <br />
                <h4 class="display-6 text-purple text-center text-bold">SCHEDULED PATIENTS</h4>
            </div>
        </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- Calendar to select date -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Select Date</h3>
                    </div>
                    <div class="card-body">
                        <input type="date" id="selectedDate" class="form-control">
                    </div>
                </div>
            </div>
        </div>

        <!-- Display patients -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">BOOKED SURGERIES</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="patientsTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        
                                        <th>Surname</th>
                                        <th>Name</th>
                                         <th>Gender</th>
                                        <th>Treatment Code</th>
                                        <th>Date </th>
                                        <th>Time </th>
                                        <th>Ward</th>
                                        <th>Bed</th>
                                        <th>Theatre</th>
                                        <th>Nurse</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Patient data will be populated here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

