@model Day_Hospital_e_prescribing_system.ViewModel.PatientMHViewModel
@{
    ViewData["Title"] = "Medical History";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .card-title {
        font-weight: bold;
    }

    .btn-purple {
        background-color: purple;
        color: white;
        font-weight: bold;
    }


    .table th, .table td {
        padding: 5px; /* Reduce padding */
    }

    .table {
        width: auto; /* Auto width for the table */
    }

    .vitals-table th, .vitals-table td {
        padding: 10px; /* Increase padding */
        font-size: 1.2em; /* Increase font size */
    }

    .vitals-table {
        width: 100%; /* Adjust width as needed */
    }
</style>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h4 class="display-6 text-purple text-center text-bold">MEDICAL HISTORY</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h3 class="card-title">@Model.Name @Model.Surname</h3>


                            </div>
                            <div class="col-md-2 text-right">
                                <a href="@Url.Action("Prescriptions", "Anaesthesiologist", new { id = Model.PatientID })" class="btn btn-purple">Prescriptions</a>
                            </div>
                            @*<div class="col-md-2 text-right">
                            <a href="@Url.Action("Orders", "Anaesthesiologist", new { id = Model.PatientID })" class="btn btn-purple">Orders</a>
                            </div>*@
                        </div>
                        <div class="row">
                            @*<div class="col-md-8">
                            <h3 class="card-title">@Model.PAtientName</h3>
                            <h3 class="card-title">Date: @Model.Date?.ToString("dd MMM yyyy")</h3>
                            </div>
                            <!-- ... -->
                            </div>*@
                            <div class="card-body">
                                <table class="table">
                                    <h3>Vitals</h3>
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Height</th>
                                            <th>Weight</th>
                                            <th>Vital</th>
                                            <th>Value</th>
                                            <th>Notes</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Vitals)
                                        {
                                            <tr>
                                                <td>@item.VitalDate.ToShortDateString()</td>
                                                <td>@item.VitalTime.ToString(@"hh\:mm")</td>
                                                <td>@item.VitalHeight</td>
                                                <td>@item.VitalWeight</td>
                                                <td>@item.VitalName</td>
                                                <td>@item.VitalValue</td>
                                                <td>@item.VitalNotes</td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                                <br />
                                <div class="row">
                                    <div class="col-md-4">
                                        @*<h3>Allergies</h3>*@
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Allergy</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Allergies)
                                                {
                                                    <tr>
                                                        <td>@item.AllergyName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-4">
                                        @*<h3>Chronic Conditions</h3>*@
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Chronic Conditions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Conditions)
                                                {
                                                    <tr>
                                                        <td>@item.ConditionName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-4">
                                        @* <h3>Medications</h3>*@
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Current Medication</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Medications)
                                                {
                                                    <tr>
                                                        <td>@item.MedicationName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</section>
