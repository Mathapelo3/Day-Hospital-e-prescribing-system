@model Day_Hospital_e_prescribing_system.ViewModel.PatientMHViewModel
@{
    ViewData["Title"] = "Medical History";
    Layout = "~/Views/Shared/Anaesthesiologist.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .card-title {
        font-weight: bold;
    }

    .btn-purple {
        background-color: purple;
        color: white;
        font-weight: bold;
    }

    .table th, .table td {
        padding: 5px;
    }

    .vitals-table, .allergies-table, .conditions-table, .medications-table {
        width: 100%;
    }
</style>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h4 class="display-6 text-purple text-center text-bold">MEDICAL HISTORY</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h3 class="card-title">@Model.Name @Model.Surname</h3>
                            </div>
                            <div class="col-md-2 text-right">
                                <a href="@Url.Action("Prescriptions", "Anaesthesiologist", new { id = Model.PatientID })" class="btn btn-purple">Prescriptions</a>
                            </div>
                            <div class="col-md-2 text-right">
                                <a href="@Url.Action("Orders", "Anaesthesiologist", new { id = Model.PatientID })" class="btn btn-purple">Orders</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <h3>Vitals</h3>
                            <table class="table table-striped table-bordered vitals-table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Height</th>
                                        <th>Weight</th>
                                        <th>Vital</th>
                                        <th>Value</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Vitals)
                                    {
                                        <tr>
                                            <td>@item.VitalDate.ToShortDateString()</td>
                                            <td>@item.VitalTime.ToString(@"hh\:mm")</td>
                                            <td>@item.VitalHeight</td>
                                            <td>@item.VitalWeight</td>
                                            <td>@item.VitalName</td>
                                            <td>@item.VitalValue</td>
                                            <td>@item.VitalNotes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <br />

                            <div class="row">
                                <div class="col-md-4">
                                    <h3>Allergies</h3>
                                    <table class="table table-striped table-bordered allergies-table">
                                        <thead>
                                            <tr>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Active_Ingredient)
                                            {
                                                <tr>
                                                    <td>@item.Active_IngredientDescription</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="col-md-4">
                                    <h3>Chronic Conditions</h3>
                                    <table class="table table-striped table-bordered conditions-table">
                                        <thead>
                                            <tr>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Conditions)
                                            {
                                                <tr>
                                                    <td>@item.ConditionName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="col-md-4">
                                    <h3>Current Medications</h3>
                                    <table class="table table-striped table-bordered medications-table">
                                        <thead>
                                            <tr>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Medications)
                                            {
                                                <tr>
                                                    <td>@item.MedicationName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
