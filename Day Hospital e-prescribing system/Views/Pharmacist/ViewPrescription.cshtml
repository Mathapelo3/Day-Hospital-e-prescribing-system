@model Day_Hospital_e_prescribing_system.ViewModel.PatientPrescriptionVM

@{
    ViewData["Title"] = "View Prescription";
    Layout = "~/Views/Shared/PharmacistLayout.cshtml";
}

<html>
    <head>
        <link rel="stylesheet" href="print.css" type="text/css" media="print" />
         <!-- Bootstrap CSS -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    </head>

    <body>
    <section class="content">



        <!-- Display patients -->
        <div class="row">
            @*Patient's Prescription*@
            <div class="col-md-8">
                <img src="~/images/cybermedlogo.png" style="display:none" alt="Company Logo" id="logo" />
                <hr style="display:none" id="logo" />
                <br />
                <!-- Button trigger modal -->
                @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Launch static backdrop modal
                </button>*@
                <!-- Modal -->
                <div class="card" id="container">

                    <div class="card-header">
                        <h5 style="color:#268aab">@Model.PatientName @Model.Surname Prescription</h5>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <form asp-action="PatientPrescriptions" asp-route-id="@Model.PatientID" asp-controller="Pharmacist">
                                <button type="submit" class="btn btn-info"> Patient's Prescription History</button>

                            </form>
                        </div>
                    </div>


                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-6">
                                <label for="inputState" class="form-label">Prescription No: </label>
                                <lable type="text">Pres2024043020</lable>
                            </div>
                            <div class="col-md-4">
                                <label for="inputState" class="form-label">Date</label>
                                <lable type="date">@Model.Date.ToString("yyyy-MM-dd")</lable>
                            </div>

                        </div>

                        <br />
                        <div class="row" style="justify-content:space-between">

                            <div class="col-md-4">
                                <label class="form-label">Patient Name: </label>
                                <lable>@Model.PatientName @Model.Surname</lable>
                            </div>
                            
                            <div class="col-md-2">
                                <label class="form-label">Gender</label>
                                <lable>@Model.Gender</lable>
                            </div>
                        </div>
                        <hr />
                        <br />
                        <div class="row" id="presTable">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        
                                        <th>Medication Name</th>
                                        <th>Instructions</th>
                                        <th>Quantity</th>
                                        <th>Available Quantity</th>
                                        <th>Refills</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        
                                        <td>@(Model.DayHospitalMedicationName ?? "N/A")</td>
                                        <td>@Html.Raw(Model.Instruction)</td>
                                        <td>@(Model.Quantity ?? "N/A")</td>
                                        <td class="bg-success">@((Model.QtyLeft).ToString())</td>
                                        <td>0</td>
                                    </tr>


                                </tbody>
                            </table>

                            <br />
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn btn-info" type="button">Dispense Prescription</button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rejectPrescription">
                                    Reject Prescription
                                </button>

                                <!-- Modal -->
                                <div class=" modal static" id="rejectPrescription" tabindex="-1" role="dialog" aria-labelledby="rejectPrescriptionLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="rejectPrescriptionLabel">Reason for Rejecting Prescription</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                @*<form method="post">
                                                <textarea asp-for="" class="form-control">

                                                </textarea>


                                                </form>*@
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger">Reject</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Button trigger modal -->
                            <!-- Modal -->


                        </div>
                    </div>
                </div>

            </div>
                @*<button onclick="window.print();return false;">Print this page</button>*@

                @*Patient Allergies*@
            <div class="col-md-4">
                <br />
                <div class="card">
                    <div class="card-header">
                        <h5 style="color:#268aab">Patient Allergies</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th scope="col">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <form>
                                        <td>@Model.AllergyName</td>
                                    </form>
                                    
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @*PAtient Vitals*@
        <div class="row">
            <div class="col-md-8">
                <br />
                <div class="card">
                    <div class="card-header">
                        <h5 style="color:#268aab"> Patient's Vitals</h5>

                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            
                                <tr>

                                    <td scope="col">Date</td>
                                    <td scope="col">Time</td>
                                    <td scope="col">Body Temperature</td>
                                    <td scope="col">Heart Rate </td>
                                    <td scope="col">Blood Pressure:</td>
                                    <td scope="col">Oxygen Saturation</td>
                                    
                                </tr>
                            
                                <tr>
                                    <td>@Model.VitalDate.ToString("yyyy-MM-dd")</td>
                                    <td>@Model.VitalTime</td>
                                    <td>@Model.BodyTemp</td>
                                    <td>@Model.HeartRate</td>
                                    <td>@Model.BloodPressure</td>
                                    <td>@Model.Oxygen</td>
                                    
                                </tr>
                               
                            
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <br />
                <div class="card">
                    <div class="card-header">
                        <h5 style="color:#268aab"> Conditions</h5>

                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">

                            <tbody>
                                <form asp-route-id="@Model.ConditionID" asp-action="" asp-controller="" >
                                    <tr>
                                        <td>@Model.ConditionName</td>
                                    </tr>
                                </form>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <br />
                <div class="card">
                    <div class="card-header">
                        <h5 style="color:#268aab">Current Medication</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">

                            <tbody>
                               <form asp-action="" asp-route-id="@Model.MedicationID">
                                    <tr>
                                        <td>@Model.MedicationName</td>
                                    </tr>
                               </form>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
    </body>
</html>

<script>
    function rejectPrescription(id) {
        $.ajax({
            type: "Get",
            url: "/Pharmacist/RejectPrescription",
            data: { id: id },
            success: function (result) {
                $("#presTable").html(result);
                setTimeout(function () { // Delay showing the modal
                    $("#rejectPrescription").modal('show');
                }, 300); // Wait for 300 milliseconds
            }
        });
    }

    $(document).ready(function () {
        $('.btn-info').on('click', function (e) {
            e.preventDefault();
            var link = $(this).attr('href');
            window.location.href = link;
        });

        $('.btn-danger').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            rejectPrescription(id);
        });
    });


</script>
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


 