@model IEnumerable<Day_Hospital_e_prescribing_system.ViewModel.OrderMedicineViewModel>

@{
    ViewData["Title"] = "Orders by Status";
    Layout = "~/Views/Shared/PharmacistLayout.cshtml";
}

<h2>Orders by Status</h2>

<section class="content">



    <!-- Display patients -->
    <div class="row">
        @*Patient's Prescription*@
        <div class="col-md-8">
            <img src="~/images/cybermedlogo.png" style="display:none" alt="Company Logo" id="logo" />
            <hr style="display:none" id="logo" />
            <br />
            <!-- Button trigger modal -->
            @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Launch static backdrop modal
            </button>*@
            <!-- Modal -->

            <div class="card" id="container">

                <div class="card-header">
                    <h5 style="color:#268aab">View Order</h5>
                    
                </div>


                <div class="card-body">

                    <table class="table">
                        <thead>
                            <tr>
                                <
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                
                                <th>Medication Name</th>
                                
                                <th>Dosage Form</th>
                                <th>Actions</th> <!-- New column for actions -->
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var order in Model)
                                {
                                    <tr>
                                        
                                        <td>@order.Date.ToShortDateString()</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.Status</td>
                                        
                                        <td>@order.MedicationName</td>
                                       
                                        <td>@order.DosageForm</td>
                                        <td>
                                            @if (order.Status == "Ordered") // Condition to check status
                                            {
                                                <form asp-action="OrderMedication" method="post" style="display:inline;">
                                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                                    <button type="submit" class="btn btn-primary">Order</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

