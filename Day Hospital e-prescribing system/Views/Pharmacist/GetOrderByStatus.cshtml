@model IEnumerable<Day_Hospital_e_prescribing_system.ViewModel.OrderMedicineViewModel>

@{
    ViewData["Title"] = "Orders by Status";
    Layout = "~/Views/Shared/PharmacistLayout.cshtml";
}

<h2>Orders by Status</h2>

<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card" id="container">
                <div class="card-header">
                    <h5 style="color:#268aab">View Order</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Medication Name</th>
                                <th>Dosage Form</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Date.ToShortDateString()</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.Status</td>
                                        <td>@order.MedicationName</td>
                                        <td>@order.DosageForm</td>
                                        <td>
                                            @if (order.Status == "Ordered")
                                            {
                                                <form asp-action="OrderMedication" method="post" style="display:inline;">
                                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                                    <button type="submit" class="btn btn-primary">Order</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No orders found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
