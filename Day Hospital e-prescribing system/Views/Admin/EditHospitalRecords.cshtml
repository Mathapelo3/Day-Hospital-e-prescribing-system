@{
    ViewData["Title"] = "Manage Day Hospital Records";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
        </style>
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                <!-- Place for the hospital logo if needed -->
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">HOSPITAL RECORDS</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form id="orderForm">
                           
                @*<p class="fw-bold">Personal Details:</p>*@
                <div class="form-group col-12">
                    <label  class="control-label required">Name: </label>
                    <input class="form-control" placeholder="CyberMed" />
                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                </div>
                <div class="form-group col-12">
                    <label class="control-label required">Contact Number:</label>
                                    <input class="form-control" placeholder="075 982 346"  />
                                    @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                </div>
                
                @*<p class="fw-bold">Personal Details:</p>*@
                <div class="form-group col-12">
                    <label  class="control-label required">Adress Line 1 </label>
                                    <input class="form-control" placeholder="57 Lake Street" />
                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                </div>
                <div class="form-group col-12">
                    <label class="control-label required">Address Line 2:</label>
                    <input class="form-control" placeholder="Pretoria" />
                    @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                </div>
            
                                @*<p class="fw-bold">Personal Details:</p>*@
                                <div class="form-group col-12">
                                    <label class="control-label required">E-mail: </label>
                                    <input class="form-control" placeholder="cybermed@gmail.com" />
                                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                                </div>
                                <div class="form-group col-12">
                                    <label class="control-label required">Number:</label>
                                    <input class="form-control" placeholder=" 64597" />
                                    @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                                </div>
                           
                                @*<p class="fw-bold">Personal Details:</p>*@
                                <div class="form-group col-12">
                                    <label class="control-label required">Purchase Manager Contact Number: </label>
                                    <input class="form-control" placeholder=" 041 654 831" />
                                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                                </div>
                        
                           <div class="row">
                            <div class="col text-center">
                                <button type="submit" class="btn btn-dark-green">Save</button>
                            </div>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
