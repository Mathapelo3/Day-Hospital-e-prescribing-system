@using Day_Hospital_e_prescribing_system.Models
@model IEnumerable<Day_Hospital_e_prescribing_system.Models.Condition>

@{
    ViewData["Title"] = "Chronic Conditions Records";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

    var conditions = ViewBag.Condition as IEnumerable<Condition>;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                <!-- Place for the hospital logo if needed -->
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">CHRONIC CONDITIONS</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:20%">Condition Name</th>
                                        <th>Description</th>
                                        <th style="width:10%">Action</th>
                                    </tr>
                                </thead>
                                @foreach (var condition in conditions)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@condition.Name</td>
                                            <td>@condition.Description</td>
                                            <td>
                                                <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                    <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <div class="text-center">
                            @* <div class="btn-group">*@
                            <button type="button" class="btn btn-primary" id="addCondition">
                                <i class="fas fa-plus"></i> <!-- Font Awesome plus icon -->
                            </button>

                            <button type="button" class="btn btn-dark-green" onclick="saveChanges()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
