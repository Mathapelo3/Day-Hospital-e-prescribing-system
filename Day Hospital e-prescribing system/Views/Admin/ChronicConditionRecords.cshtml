@{
    ViewData["Title"] = "Chronic Conditions Records";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                <!-- Place for the hospital logo if needed -->
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">CHRONIC CONDITIONS</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:15%">Condition Name</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Sample row, replace with actual data -->
                                    <tr>
                                        <td>Asthma</td>
                                        <td>A chronic respiratory condition characterized by inflammation and narrowing of the airways, 
                                            leading to difficulty breathing, wheezing, and coughing.</td>
                                        <td>
                                            <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Arthritis</td>
                                        <td>
                                            A group of disorders involving inflammation of one or more joints, causing pain, stiffness, and swelling. 
                                            The most common types include osteoarthritis and rheumatoid arthritis.
                                        </td>
                                        <td>
                                            <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Heart Disease</td>
                                        <td>
                                            A range of conditions affecting the heart, including coronary artery disease, 
                                            heart rhythm problems, and heart defects present at birth. 
                                            It is a leading cause of death worldwide.
                                        </td>
                                        <td>
                                            <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Epilepsy</td>
                                        <td>
                                            A neurological disorder characterized by recurrent seizures, 
                                            which can vary from brief lapses of attention or muscle jerks to severe and prolonged convulsions.
                                        </td>
                                        <td>
                                            <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>HIV/AIDS</td>
                                        <td>
                                            A chronic viral infection that attacks the immune system, 
                                            leading to a progressive decline in its function and leaving individuals vulnerable 
                                            to various infections and diseases.
                                        </td>
                                        <td>
                                            <button type="button" class="btn  btn-primary" onclick="editVital()">
                                                <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                                            </button>
                                        </td>
                                    </tr>
                                    <!-- Add more rows dynamically based on data -->
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center">
                            @* <div class="btn-group">*@
                            <button type="button" class="btn btn-primary" id="addMedication">
                                <i class="fas fa-plus"></i> <!-- Font Awesome plus icon -->
                            </button>

                            <button type="button" class="btn btn-dark-green" onclick="saveChanges()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
