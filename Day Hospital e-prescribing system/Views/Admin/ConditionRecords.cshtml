@using Day_Hospital_e_prescribing_system.Models
@model IEnumerable<Day_Hospital_e_prescribing_system.Models.Condition>

@{
    ViewData["Title"] = "Conditions Records";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

    var conditions = ViewBag.Condition as IEnumerable<Condition>;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                <!-- Place for the hospital logo if needed -->
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">CONDITIONS</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:20%">Condition Name</th>
                                        <th>ICD_10_Code</th>
                                        <th style="width:10%">Action</th>
                                    </tr>
                                </thead>
                                @foreach (var condition in conditions)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@condition.Name</td>
                                            <td>@condition.ICD_10_Code</td>
                                            <td>
                                                <a asp-action="EditCondition" asp-route-id="@condition.ConditionID" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-dark-green" onclick="location.href='@Url.Action("AddCondition", "Admin")'">
                                Add Condition
                            </button>
                            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("AdminDashboard", "Admin")'">Back</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
