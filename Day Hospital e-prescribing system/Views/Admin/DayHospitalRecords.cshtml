@{
    ViewData["Title"] = "Manage Day Hospital Records";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Day Hospital Records</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th>Day Hospital Name:</th>
                                            <td>Dummy Hospital</td>
                                        </tr>
                                        <tr>
                                            <th>Address:</th>
                                            <td>123 Street, City</td>
                                        </tr>
                                        <tr>
                                            <th>Contact Number:</th>
                                            <td>1234567890</td>
                                        </tr>
                                        <tr>
                                            <th>E-mail Address:</th>
                                            <td>dummyhospital@example.com</td>
                                        </tr>
                                        <tr>
                                            <th>Day Hospital Number:</th>
                                            <td>4567</td>
                                        </tr>
                                        <tr>
                                            <th>Purchase Manager E-mail:</th>
                                            <td>purchasemanager@example.com</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center">
                    <button type="button" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-primary">Edit</button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
