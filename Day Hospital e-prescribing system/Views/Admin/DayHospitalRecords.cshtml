@model IEnumerable<Day_Hospital_e_prescribing_system.Models.HospitalRecord>

@{
    ViewData["Title"] = "Hospital Record";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .card-title {
        font-weight: bold;
    }

    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>

<!-- Main content -->
<section class="content d-flex justify-content-center align-items-center">
    <!-- Center content horizontally and vertically -->
    <div class="card" style="width: 100%;">
        <div class="card-header">
            <div class="text-center">
                <!-- You can add an image or additional header content here -->
                <!-- <img src="~/Images/zoomedLogo (2).png" width="200" /> -->
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center font-weight-bold">DAY HOSPITAL RECORD</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <!-- mx-auto will center the column horizontally -->
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.Name</td>
                                }
                            </tr>
                            <tr>
                                <th>Address Line 1</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.AddressLine1</td>
                                }
                            </tr>
                            <tr>
                                <th>Address Line 2</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.AddressLine2</td>
                                }
                            </tr>
                            <tr>
                                <th>Contact No</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.ContactNo</td>
                                }
                            </tr>
                            <tr>
                                <th>Email</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.Email</td>
                                }
                            </tr>
                            <tr>
                                <th>PM Contact No</th>
                                @foreach (var record in Model)
                                {
                                    <td>@record.PMContactNo</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <!-- Use ASP.NET Core Tag Helper to generate URL -->
                        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="EditHospitalRecords">
                            <i class="fas fa-edit"></i>  <!-- Font Awesome edit icon -->
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
