@model IEnumerable<Day_Hospital_e_prescribing_system.Models.User>
@{
    ViewData["Title"] = "Medical Professionals";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .card-title {
        font-weight: bold;
    }

    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="text-center ">
                @*                <img src="~/Images/zoomedLogo (2).png" width="200" />
                *@
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">MEDICAL PROFFESIONALS</h4>
        </div>
    </div>
                <div class="card-body">
        <!-- Search bar and filters -->
        @*<div class="row mb-3">
            <div class="col-md-6">
                <!-- Search bar -->
                <div class="input-group">
                    <label for="searchString" class="mr-2">Search By Surname:</label>
                    <input type="text" name="searchString" id="searchString" class="form-control" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-dark-green">Filter</button>
                </div>
            </div>
            <div class="col-md-2 ml-auto">
                <a href="@Url.Action("MedicalProfessionals", "Admin")" class="btn btn-danger btn-block">Reset</a>
            </div>
        </div>*@
                    <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>HCR No</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th></th>
                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>@user.Email</td>
                            <td>@user.ContactNo</td>
                            <td>@user.HCRNo</td>
                            <td>@user.Username</td>
                            <td>@user.Roles.Name</td>
                           <td>
                                                <a asp-action="EditMedicalProfessional" asp-route-id="@user.UserID" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            @*<td>
                                            <form asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken().ToString()" />
                                            </form>
                                        </td>*@
                        </tr>
                    }
                </tbody>
            </table>
           <div class="text-center">
           @* <div class="btn-group">*@
                <button type="button" class="btn btn-dark-green" onclick="location.href='@Url.Action("AddMedicalProfessional", "Admin")'">
                    <i class="fas fa-plus"></i> <!-- Font Awesome plus icon -->
                </button>

               
            </div>
        </div>
    
       
  
</section>
 @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<!-- /.content -->
