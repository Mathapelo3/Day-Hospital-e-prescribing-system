@model Day_Hospital_e_prescribing_system.Models.User
@{
    ViewData["Title"] = "Medical Professionals";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    .card-title {
        font-weight: bold;
    }

    .text-dark-green {
        color: darkgreen;
    }

    .btn-outline-darkgreen {
        color: darkgreen;
        border-color: darkgreen;
    }

        .btn-outline-darkgreen:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }

    .btn-dark-green {
        color: white;
        background-color: darkgreen;
        border-color: darkgreen;
    }

        .btn-dark-green:hover {
            color: white;
            background-color: darkgreen;
            border-color: darkgreen;
        }
</style>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="text-center ">
                @*                <img src="~/Images/zoomedLogo (2).png" width="200" />
                *@
            </div>
            <br />
            <h4 class="display-6 text-dark-green text-center text-bold">MEDICAL PROFFESIONALS</h4>
        </div>
    </div>
                <div class="card-body">
        <!-- Search bar and filters -->
        <div class="row mb-3">
            <div class="col-md-3">
                <!-- Search bar -->
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="searchButton">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            
        </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@Model.Name</dd>

                        <dt class="col-sm-2">Surname</dt>
                        <dd class="col-sm-10">@Model.Surname</dd>

                        <dt class="col-sm-2">Email</dt>
                        <dd class="col-sm-10">@Model.Email</dd>

                        <dt class="col-sm-2">Contact No</dt>
                        <dd class="col-sm-10">@Model.ContactNo</dd>

                        <dt class="col-sm-2">HCR No</dt>
                        <dd class="col-sm-10">@Model.HCRNo</dd>

                        <dt class="col-sm-2">Username</dt>
                        <dd class="col-sm-10">@Model.Username</dd>

                        <dt class="col-sm-2">Password</dt>
                        <dd class="col-sm-10">@Model.HashedPassword</dd>

                        <dt class="col-sm-2">Role</dt>
                        <dd class="col-sm-10">@Model.Role.Name</dd>
                    </dl>
                </div>
                </table>
           <div class="text-center">
           @* <div class="btn-group">*@
                <button type="button" class="btn btn-dark-green" id="addMedicalProfessional">
                    <i class="fas fa-plus">Add</i> <!-- Font Awesome plus icon -->
                </button>

               
            </div>
        </div>
    
          
</section>
<!-- /.content -->
